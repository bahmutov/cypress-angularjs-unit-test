{
  "name": "cypress-angularjs-unit-test",
  "description": "Unit test Angularjs code using Cypress.io test runner",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/cypress-angularjs-unit-test/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "echo skip npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "echo skip npm run unused-deps",
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/cypress-angularjs-unit-test#readme",
  "keywords": [
    "angularjs",
    "cypress",
    "cypress-io",
    "test",
    "testing"
  ],
  "license": "MIT",
  "main": "src/",
  "private": false,
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "standard": {
    "globals": ["cy", "expect"]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "break",
          "release": "major"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/cypress-angularjs-unit-test.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix 'src/*.js' 'cypress/**/*.js'",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js' 'cypress/**/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "cypress run",
    "cy": "cypress open",
    "unused-deps": "dependency-check --unused --no-dev .",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "angular": "1.7.5",
    "ban-sensitive-files": "1.9.2",
    "dependency-check": "3.2.1",
    "deps-ok": "0.11.1",
    "git-issues": "1.3.1",
    "license-checker": "18.1.0",
    "nsp": "3.2.1",
    "pre-git": "3.17.1",
    "prettier-standard": "8.0.1",
    "standard": "11.0.1",
    "cypress": "2.1.0",
    "travis-deploy-once": "4.4.1",
    "semantic-release": "15.10.6"
  },
  "peerDependencies": {
    "angular": "^1.6.9",
    "cypress": "^2.1.0"
  }
}
